@model IEnumerable<WEB2.Models.Product>


@{
    ViewData["Title"] = "Laptop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="@Url.Content("/css/views/home/productlist.css")" rel="stylesheet" type="text/css" />
}
<main>
    <script src="@Url.Content("/js/views/home/productlist.js")"></script>
    @*1 vài sản phẩm để test bộ lọc  Jquery *@
    <style>
        .rom-ram {
            margin: 0px;
            font-size: 12px;
            text-align:center;
            margin-bottom: 10px;
            font-weight: 500;
        }
        .rom-ram > span {
            padding: 5px;
            border: 1px solid black;
            border-radius: 3px;
            margin-left: 3px;
            margin-right: 3px;
            color: black;
        }
    </style>
    <div class="container" style="justify-content: center">
        <div class="mb-3">
            <div class="d-inline">
                <a class="btn" id="macbook"><img src="https://cdn.tgdd.vn/Brand/1/logo-macbook-149x40.png" width="90" /></a>
                <a class="btn" id="asus"><img src="https://cdn.tgdd.vn/Brand/1/logo-asus-149x40.png" width="90" /></a>
                <a class="btn" id="acer"><img src="https://cdn.tgdd.vn/Brand/1/logo-acer-149x40.png" width="90" /></a>
                <a class="btn" id="dell"><img src="https://cdn.tgdd.vn/Brand/1/logo-dell-149x40.png" width="90" /></a>
                <a class="btn" id="lenovo"><img src="https://cdn.tgdd.vn/Brand/1/logo-lenovo-149x40.png" width="90" /></a>
                <a class="btn" id="hp"><img src="https://cdn.tgdd.vn/Brand/1/logo-hp-149x40-1.png" width="90" /></a>
                <a class="btn" id="msi"><img src="https://cdn.tgdd.vn/Brand/1/logo-msi-149x40.png" width="90" /></a>
           </div>
        </div>
    </div>

     <div class="highlight">
        @foreach (var item in Model) {
            <div class="displaying">
                @*class để hiển thị *@
                <a asp-action="Details" asp-route-id="@item.ProductId">
                    <div class="card">
                        @*nhớ add id này để lọc *@
                        <div class="lbsale"><span class="lbtragop">Trả góp 0%</span></div>
                        <img class="card-img-top" src="@item.Picture" alt="@item.Color">
                        <div class="card-body">
                             <p class="rom-ram">
                                 <span id="ram">RAM&nbsp
                                     <span id="ram-detail">@item.Ram.Capacity</span>&nbspGB&nbsp</span>
                                 <span id="rom">SSD @if (@item.Rom.Capacity == 1024) {<span>1 TB</span>}
                                    else if (@item.Rom.Capacity == 2048)
                                    {
                                        <span>1 TB</span>
                                    }
                                    else
                                    {
                                        <span>@item.Rom.Capacity GB</span>
                                    }
                                     </span>
                             </p>
                            <h6 class="card-title product-name">@item.ProductName</h6>
                            <h5 class="card-title pricesale m-0">@item.UnitPrice</h5>
                            <h6 class="card-title price text-muted mt-1">@item.MSRP</h6>
                            <div>
                                <p style="display:inline">
                                    <svg class="rating-checked bi bi-star-half" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                    </svg>
                                    <svg class="rating-checked bi bi-star-half" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                    </svg>
                                    <svg class="rating-checked bi bi-star-half" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                    </svg>
                                    <svg class="rating-checked bi bi-star-half" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                    </svg>
                                    <svg class="rating-checked bi bi-star-half" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M5.354 5.119 7.538.792A.516.516 0 0 1 8 .5c.183 0 .366.097.465.292l2.184 4.327 4.898.696A.537.537 0 0 1 16 6.32a.548.548 0 0 1-.17.445l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256a.52.52 0 0 1-.146.05c-.342.06-.668-.254-.6-.642l.83-4.73L.173 6.765a.55.55 0 0 1-.172-.403.58.58 0 0 1 .085-.302.513.513 0 0 1 .37-.245l4.898-.696zM8 12.027a.5.5 0 0 1 .232.056l3.686 1.894-.694-3.957a.565.565 0 0 1 .162-.505l2.907-2.77-4.052-.576a.525.525 0 0 1-.393-.288L8.001 2.223 8 2.226v9.8z" />
                                    </svg>
                                </p>
                            </div>
                            <div class="information">
                                @*render các thông tin vào thẻ span*@
                                <ul>
                                    @*màn hình*@
                                    <li id="screen"><p>Màn hình&nbsp<span id="inch">@item.Screen.Size</span>&nbspinch</p></li>
                                    @*chip*@
                                    <li id="chip"><p>Chip&nbsp<span id="chip-name">@item.Processor.Name</span></p></li>
                                    @*ram, rom*@
                                    <li id="storage"><p><span id="ram">@item.Ram.Capacity</span>&nbspGB,&nbspROM&nbsp<span id="rom">@item.Rom.Capacity</span>&nbspGB</p></li>
                                    @*camera trước*@
                                    <li id="front-cam"><p>Webcam:&nbsp<span id="cam1">@item.Camera.FCamRes</span></p></li>
                                    @*pin*@
                                    <li id="battery"><p>Pin&nbsp<span id="capacity">@item.Battery.Capacity@item.Battery.Type</span></p></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    <script>
        $(document).ready(function () {
            $("#laptop").css({ "background-color": "white", "color": "#be1e2d" })
        });
    </script>
</main>

