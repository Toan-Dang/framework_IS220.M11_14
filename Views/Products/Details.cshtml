                $("#rating-results").html("5");
                rate = 5;
            })
            $("#second-star").on("click", function(){
                $("#rating-results").html("4");
                     rate = 4;
            })
            $("#third-star").on("click", function(){
                $("#rating-results").html("3");
                     rate = 3;
            })
            $("#fourth-star").on("click", function(){
