@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout)) {
        Layout = (string)parentLayout;
    }
    else {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}
@section Styles {
    <link href="@Url.Content("/css/areas/identity/pages/accounts/manage/_layout.css")" rel="stylesheet" type="text/css" />
}
<h5>Quản lý tài khoản</h5>
<div>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <div>
                <partial name="_ManageNav" />
            </div>
        </div>
        <div class="col-md-9">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @RenderSection("Scripts", required: false)
}