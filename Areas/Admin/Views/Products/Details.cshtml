            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CurrentOrder)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CurrentOrder)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Note)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Note)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Inventory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Inventory.InventoryId)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>